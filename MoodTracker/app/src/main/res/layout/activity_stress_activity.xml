<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FFFF">


    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImg"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/stress"
        android:visibility="gone"
        android:layout_margin="20dp"

        />

    <!--    <Chronometer-->
    <!--        android:id="@+id/chronometer"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:textSize="30sp"-->
    <!--        android:textColor="#FFFF"/>-->

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:src="@drawable/breathin" />

    <TextView
        android:id="@+id/breathTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Breath In!"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnBreath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#a4c639"
        android:layout_margin="30dp"
        android:text="Breath In" />

    <TextView
        android:id="@+id/breathTxtHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_margin="30dp"
        android:text="Hints : For relaxing you should breath in and breath out for 5 seconds each!!"
        android:textSize="15sp" />


    <!--    <TextView-->
    <!--        android:id="@+id/counttime"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:gravity="center"-->
    <!--        android:textSize="30sp"-->
    <!--        android:layout_height="wrap_content" />-->

</LinearLayout>